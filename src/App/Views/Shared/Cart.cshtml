@model app.Models.CartViewModel

@if (@Model.BurgerQty == 0) {

    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Seu carrinho est√° vazio</span>
    </h4>    
}
else 
{
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Sua compra</span>
        <span class="badge badge-secondary badge-pill">@Model.BurgerQty</span>
    </h4>
    <ul class="list-group mb-3">
        @foreach (var burger in Model.BurgerPrices) {
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@burger.BurgerName</h6>
            </div>
            <span class="text-muted">R$ @string.Format("{0:0.00}", @burger.Price)</span>
        </li>
        }
        <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
                <h6 class="my-0">Desconto incluso</h6>
            </div>
            <span class="text-success">R$ @string.Format("{0:0.00}", @Model.TotalDiscount)</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span>Total</span>
            <strong>R$ @string.Format("{0:0.00}", @Model.Total)</strong>
        </li>
    </ul>
}