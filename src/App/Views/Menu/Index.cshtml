@model app.Models.BurgerMenuViewModel

<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Sua compra</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Product name</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$12</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Second product</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$8</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Third item</h6>
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Promo code</h6>
                        <small>EXAMPLECODE</small>
                    </div>
                    <span class="text-success">-$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total</span>
                    <strong>$20</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <div class="card-deck mb-3 text-center">
                @foreach (var burger in Model.Burgers) {
                    <div class="card mb-4 box-shadow">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">@burger.BurgerName</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">R$ @burger.BurgerPrice
                            </h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                @foreach (var ingredientDescription in burger.IngredientsDescription)
                                {
                                    <li>@ingredientDescription</li>
                                }
                            </ul>
                            
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-lg btn-block btn-primary">Comprar</button>
                        </div>
                    </div>
                }

            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card-deck mb-3 text-center">
                        <div class="card mb-4 box-shadow">
                            <div class="card-header">
                                <h4 class="my-0 font-weight-normal">Monte o seu lanche</h4>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mt-3 mb-4">
                                    @foreach (var ingredients in Model.Ingredients)
                                    {
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control bg-white" value=@ingredients.IngredientDescription readonly>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button">+</button>
                                                <button class="btn btn-outline-secondary" type="button">-</button>
                                            </div>
                                        </div>
                                    }
                                </ul>                                
                            </div>
                            <div class="card-footer">
                                <button type="button" class="btn btn-lg btn-block btn-primary">Comprar</button>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>